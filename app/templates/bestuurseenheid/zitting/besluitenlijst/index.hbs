<div class="container-flex--scroll u-padding--round">
  <WithRdfaContext @model={{model.besluitenlijst}} @class="grid" as |besluitenlijstCtx|>
    <besluitenlijstCtx.get @prop="type" @link={{true}} as |elements|>
      <a {{rdfa elements}} class="u-hidden"></a>
    </besluitenlijstCtx.get>

    <WithRdfaContext @model={{model}} @class="col--7-12 col--9-12--m col--1-1--s" as |ctx|>
      <h1 class="h1 u-spacer--top--small">
        <ctx.get @prop="besluitenlijst" as |elements|>
          <span {{rdfa elements}}>Besluitenlijst</span>
        </ctx.get>
        van
        <ctx.get @prop="bestuursorgaan" as |elements _ bInTimeCtx|>
          <span {{rdfa elements}}>
            <bInTimeCtx.get @prop="isTijdsspecialisatieVan" as |elements _ bCtx|>
              <span {{rdfa elements}}>
                <bCtx.get @prop="naam" />
              </span>
            </bInTimeCtx.get>
          </span>
        </ctx.get>
        , zitting van
        <ctx.get @prop="geplandeStart" as |elements value|>
          <span {{rdfa elements}} class="u-spacer--tiny">{{moment-format value 'D MMMM YYYY, HH:mm'}}</span>
        </ctx.get>
      </h1>

      <div class="grid grid--is-stacked">
        {{#each besluiten as |besluit|}}
          <div class="col--12-12">
            <BesluitOverviewItem @besluit={{besluit}} />
          </div>
        {{else}}
          <div class="col--12-12">
            <p>Geen besluiten beschikbaar.</p>
          </div>
        {{/each}}
      </div>

