          <div resource="{{model.zitting.uri}}" typeof="besluit:Zitting">
            <div property="besluit:heeftNotulen" resource="{{model.notulen.uri}}">
              {{{ inhoud }}}
            </div>
          </div>
        </div>
      </ctx.get>
    </div>

