<div class="container-flex--scroll u-padding--round">
    <a class="u-hidden" href="http://data.lblod.info/id/document-types/uittreksel" property="dct:type"></a>

    <!-- TODO add RDFa relation to zitting when RDFa helpers support inverse relations -->
    <div typeof="besluit:Zitting" resource={{model.zitting.uri}}>
      <h1 class="h1 u-spacer--top--small">
        Uittreksel van
        <span resource={{model.zitting.bestuursorgaan.uri}} typeof="besluit:Bestuursorgaan" property="besluit:isGehoudenDoor">
          <span resource={{model.zitting.bestuursorgaan.isTijdsspecialisatieVan.uri}} typeof="besluit:Bestuursorgaan" property="mandaat:isTijdspecialisatieVan">
            <span property="skos:prefLabel">Gemeenteraad Aalst</span>
          </span>
        </span>
        , zitting van
        <span class="u-spacer--tiny" property="besluit:geplandeStart" content={{iso-date model.zitting.geplandeStart}} datatype="xsd:dateTime">{{moment-format model.zitting.geplandeStart 'D MMMM YYYY, HH:mm'}}</span>
      </h1>
    </div>

    <div class="col--7-12 col--9-12--m col--1-1--s u-padding--bottom--large">
      <div class="grid grid--is-stacked">
        {{#if model.uittreksel.inhoud}}
          <div property="prov:value">
            {{{model.uittreksel.inhoud}}}
          </div>
        {{else}}
          Inhoud niet beschikbaar.
        {{/if}}
      </div>
    </div>
</div>
