{{#let (format-date this.model.zitting.gestartOpTijdstip 'd MMMM yyyy, HH:mm') as |startDate|}}
  {{page-title (concat
    "Uittreksel van "
    this.model.zitting.bestuursorgaan.isTijdsspecialisatieVan.naam
    ", zitting van "
    startDate
    )}}
{{/let}}
<div class="au-o-layout">
  <div class="au-o-region-large">
    <WithRdfaContext @model={{this.model.zitting}} as |ctx|>
      <AuHeading @skin="2" class="au-u-margin-bottom">
        Uittreksel van
        <ctx.get @prop="bestuursorgaan" as |elements _ bCtx|>
          <span {{rdfa elements}}>
            <bCtx.get @prop="isTijdsspecialisatieVan" as |elements _ itsvCtx|>
              <span {{rdfa elements}}>
                <itsvCtx.get @prop="naam" />
              </span>
            </bCtx.get>
          </span>
        </ctx.get>
        , zitting van
        <ctx.get @prop="geplandeStart" as |elements|>
          <span {{rdfa elements}}>{{format-date this.model.zitting.geplandeStart 'd MMMM yyyy, HH:mm'}}</span>
        </ctx.get>
      </AuHeading>
      <p class="au-c-heading au-c-heading--5">
        Datum publicatie:
        {{#if this.model.publication.createdOn}}
          <WithRdfaContext @model={{this.model.publication}} @tagName="span" about={{this.model.uittreksel.uri}} as |pbCtx|>
            <pbCtx.get @prop="createdOn" as |elements createdOn|>
              <span {{rdfa elements}}>{{format-date createdOn 'd MMMM yyyy'}}</span>
            </pbCtx.get>
          </WithRdfaContext>
        {{else}}
          {{!-- old data does not have this field --}}
          ongekend
        {{/if}}
      </p>
      <div class="au-u-margin-top">
        {{#if this.model.uittreksel.inhoud}}
          <WithRdfaContext @model={{this.model.uittreksel}} property="besluit:heeftUittreksel" as |uitCtx|>
            <uitCtx.get @prop="inhoud" as |elements inhoud|>
              <div {{rdfa elements}}>{{html-safe inhoud}}</div>
            </uitCtx.get>
          </WithRdfaContext>
        {{else}}
          <p>Inhoud niet beschikbaar.</p>
        {{/if}}
      </div>
    </WithRdfaContext>
  </div>
</div>
