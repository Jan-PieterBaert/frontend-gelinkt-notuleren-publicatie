<div class="au-o-layout">
  <WithRdfaContext @model={{this.zitting}} class="au-o-region-large" as |ctx|>
    <AuHeading @skin="2" class="au-u-margin-bottom">
      Bekendmakingen en uittreksels van
      <ctx.spawn.span @prop="bestuursorgaan" as |_ bInTimeCtx|>
        <bInTimeCtx.spawn.span @prop="isTijdsspecialisatieVan" as |_ bCtx|>
          <bCtx.get @prop="naam" />
        </bInTimeCtx.spawn.span>
      </ctx.spawn.span>
      , zitting van
      <ctx.spawn.span @prop="geplandeStart" as |value|>{{format-date value 'd MMMM yyyy, HH:mm'}}</ctx.spawn.span>
    </AuHeading>

    <ul class="au-c-list">
    {{#each this.uittreksels as |uittreksel|}}
      <li class="au-c-list__item">
        <UittrekselOverviewItem @uittreksel={{uittreksel}} @besluit={{uittreksel.behandelingVanAgendapunt.besluiten.firstObject}} />
      </li>
    {{else}}
      <li>
        <p>Geen bekendmakingen of uittreksels beschikbaar.</p>
      </li>
    {{/each}}
    </ul>
  </WithRdfaContext>
</div>

{{outlet}}
