<div class="container-flex--scroll u-padding--round--small">
  <div class="grid grid--align-center">
    <div class="col--8-12 col--1-1--s">
      <h1 class="h1 u-spacer--top--small">
        Publicaties voor de zitting van {{get (await model.bestuursorgaan.isTijdsspecialisatieVan) 'naam'}},
        <br>
        op {{moment-format model.geplandeStart 'D MMMM YYYY, HH:mm'}}
      </h1>

      <ul class="steps steps--timeline">
        {{#if model.notulen}}
          {{#link-to 'bestuurseenheid.zitting.notulen' model.id tagName='li' class="step"}}
            <div class="step__icon">
              {{#if notulenPublicationDate}}
                {{moment-format notulenPublicationDate 'D'}}
                <span class="step__icon__sub">{{moment-format notulenPublicationDate 'MMM'}}</span>
              {{else}}
                <i class="vi vi-news"></i>
              {{/if}}
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  {{#link-to 'bestuurseenheid.zitting.notulen' model.id tagName='h3' class="step__title"}}
                    Notulen
                  {{/link-to}}
                </div>
                <div class="step__header__info">
                  <!-- {{#wu-pill class="pill--primary-blue"}}
                       <i class="vi vi-news"></i> Notulen
                       {{/wu-pill}} -->
                  <i class="vi vi-arrow"></i>
                </div>
              </div>
            </div>
          {{/link-to}}
        {{else}}
          <li class="step step--disabled">
            <div class="step__icon">
              <i class="vi vi-clock"></i>
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Notulen niet publiek</h3>
                </div>
              </div>
            </div>
          </li>
        {{/if}}

        {{!-- @Miet -> Currently a soon as besluitenlijst or bekendmaking is published, this option will pop up.
           Backend needs update I guess to deal with the correct condition --}}

        {{#if model.uittreksels.length}}
          {{#link-to 'bestuurseenheid.zitting.uittreksels' model.id tagName='li' class="step"}}
            <div class="step__icon">
              {{!-- TODO: provide correct field --}}
              {{#if besluitenlijstPublicationDate}}
                {{moment-format besluitenlijstPublicationDate 'D'}}
                <span class="step__icon__sub">{{moment-format besluitenlijstPublicationDate 'MMM'}}</span>
              {{else}}
                <i class="vi vi-news"></i>
              {{/if}}
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Bekendmakingen en uittreksels</h3>
                </div>
                <div class="step__header__info">
                  <!-- {{#wu-pill class="pill--primary-yellow"}}
                       <i class="vi vi-news"></i> Besluitenlijst
                       {{/wu-pill}} -->
                  <i class="vi vi-arrow"></i>
                </div>
              </div>
            </div>
          {{/link-to}}
        {{else}}
          <li class="step step--disabled">
            <div class="step__icon">
              <i class="vi vi-clock"></i>
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Bekendmakingen en uittreksels niet publiek</h3>
                </div>
              </div>
            </div>
          </li>
        {{/if}}

        {{#if model.besluitenlijst.id}}
          {{#link-to 'bestuurseenheid.zitting.besluitenlijst' model.id tagName='li' class="step"}}
            <div class="step__icon">
              {{#if besluitenlijstPublicationDate}}
                {{moment-format besluitenlijstPublicationDate 'D'}}
                <span class="step__icon__sub">{{moment-format besluitenlijstPublicationDate 'MMM'}}</span>
              {{else}}
                <i class="vi vi-news"></i>
              {{/if}}
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Besluitenlijst</h3>
                </div>
                <div class="step__header__info">
                  <!-- {{#wu-pill class="pill--primary-yellow"}}
                       <i class="vi vi-news"></i> Besluitenlijst
                       {{/wu-pill}} -->
                  <i class="vi vi-arrow"></i>
                </div>
              </div>
            </div>
          {{/link-to}}
        {{else}}
          <li class="step step--disabled">
            <div class="step__icon">
              <i class="vi vi-clock"></i>
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Besluitenlijst niet publiek</h3>
                </div>
              </div>
            </div>
          </li>
        {{/if}}


        {{#if model.agendapunten.length}}
          {{#link-to 'bestuurseenheid.zitting.agenda' model.id tagName='li' class="step"}}
            <div class="step__icon">
              {{#if agendaPublicationDate}}
                {{moment-format agendaPublicationDate 'D'}}
                <span class="step__icon__sub">{{moment-format agendaPublicationDate 'MMM'}}</span>
              {{else}}
                <i class="vi vi-news"></i>
              {{/if}}
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Agenda</h3>
                </div>
                <div class="step__header__info">
                  <!-- {{#wu-pill}}
                       <i class="vi vi-news"></i> Spoedeisende agenda
                       {{/wu-pill}} -->
                  <i class="vi vi-arrow"></i>
                </div>
              </div>
            </div>
          {{/link-to}}
        {{else}}
          <li class="step step--disabled">
            <div class="step__icon">
              <i class="vi vi-clock"></i>
            </div>
            <div class="step__wrapper">
              <div class="step__header">
                <div class="step__header__titles">
                  <h3 class="step__title">Agenda niet publiek</h3>
                </div>
              </div>
            </div>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</div>

<div class="u-hidden"
     vocab="http://data.vlaanderen.be/ns/besluit#"
     prefix="lblodbp: http://data.lblod.info/vocabularies/besluitPublicatie/ eli: http://data.europa.eu/eli/ontology# prov: http://www.w3.org/ns/prov# mandaat: http://data.vlaanderen.be/ns/mandaat# besluit: http://data.vlaanderen.be/ns/besluit# person: http://www.w3.org/ns/person# persoon: http://data.vlaanderen.be/ns/persoon# ">
  <div resource="http://data.lblod.info/id/zittingen/{{model.id}}" typeof="besluit:Zitting">
    <ul class="steps steps--timeline">
      {{#if model.notulen}}
        {{#link-to 'bestuurseenheid.zitting.notulen' model.id tagName='li' class="step"}}
          <a href={{href-to 'bestuurseenheid.zitting.notulen' model.id}} tagName="h3" class="step__title" property="http://data.lblod.info/vocabularies/besluitPublicatie/linkToPublications">
            Notulen
          </a>
        {{/link-to}}
      {{/if}}

      {{#if model.uittreksels.length}}
        <a href={{href-to 'bestuurseenheid.zitting.uittreksels' model.id}} tagName="li" class="step" property="http://data.lblod.info/vocabularies/besluitPublicatie/linkToPublications">
          <h3 class="step__title">Bekendmakingen en uittreksels</h3>
        </a>
      {{/if}}

      {{#if model.besluitenlijst.id}}
        <a href={{href-to 'bestuurseenheid.zitting.besluitenlijst' model.id}} tagName="li" class="step" property="http://data.lblod.info/vocabularies/besluitPublicatie/linkToPublications">
          <h3 class="step__title">Besluitenlijst</h3>
        </a>
      {{/if}}

      {{#if model.agendapunten.length}}
        <a href={{href-to 'bestuurseenheid.zitting.agenda' model.id}} tagName="li" class="step" property="http://data.lblod.info/vocabularies/besluitPublicatie/linkToPublications">
          <h3 class="step__title">Agenda</h3>
        </a>
      {{/if}}
    </ul>
  </div>
</div>

{{outlet}}
