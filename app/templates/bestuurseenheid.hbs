<BreadCrumbs @tagName="ul" @linkable={{true}} @crumbClass="breadcrumb-item" @class="functional-header__sub__actions" as |component route|>
  <BreadCrumb @route={{route}} @breadCrumbs={{component}} @class="functional-header__sub__action">
    <h2 class="functional-header__sub__title">
      {{#if route.linkable}}
        <LinkTo @route={{route.path}}>{{route.title}}</LinkTo>
      {{else}}
        {{route.title}}
      {{/if}}
    </h2>
  </BreadCrumb>
</BreadCrumbs>

{{outlet}}
