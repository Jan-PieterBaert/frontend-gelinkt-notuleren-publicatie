<AuContentHeader @titlePartOne="Publicaties" @titlePartTwo="Gelinkt Notuleren" @pictureSize="large">
  <img
    sizes="100vw"
    src="/assets/images/banner-bruges.jpg"
    srcset="/assets/images/banner-bruges-320.jpg 320w, /assets/images/banner-bruges-1024.jpg 1024w, /assets/images/banner-bruges-1600.jpg 1600w" alt="Foto van Brugge.">
</AuContentHeader>

<div class="au-o-region-large">
  <div class="au-o-layout">
    <AuHeading @level="2" @skin="3" class="au-u-margin-bottom">Zoek naar gepubliceerde agenda's, besluiten en notulen van een bestuur</AuHeading>
    <ul class="au-c-steps">
      <li class="au-c-steps__item">
        <AuCard @flex={{true}} @divided={{true}} as |c|>
          <c.header @badgeNumber="1" @badgeSkin="action">
            <AuHeading @level="2" @skin="4">
              Stap 1: Kies het type bestuurseenheid
            </AuHeading>
          </c.header>
          <c.content>
            <SelectBestuurseenheidClassificatieLabel @model={{model}} @selected={{bestuurseenheidClassificatie}} @onSelect={{action "setBestuurseenheidClassificatie"}} />
          </c.content>
        </AuCard>
      </li>
      <li class="au-c-steps__item">
        <AuCard @flex={{true}} @divided={{if bestuurseenheidClassificatie true false}} as |c|>
          <c.header @badgeNumber="2" @badgeSkin={{if bestuurseenheidClassificatie "action" ""}}>
            <AuHeading @level="2" @skin="4">
              Stap 2: Kies de bestuurseenheid
            </AuHeading>
          </c.header>
          <c.content>
            {{#if bestuurseenheidClassificatie}}
              <SelectBestuurseenheidNaam @bestuurseenheidClassificatie={{bestuurseenheidClassificatie}} @selected={{bestuurseenheidNaam}} @onSelect={{action (mut bestuurseenheidNaam)}} />
            {{/if}}
            {{#if bestuurseenheidNaam}}
              <div class="button-group">
                <LinkTo @route="bestuurseenheid" @models={{array bestuurseenheidNaam bestuurseenheidClassificatie.label}} class="au-c-button">
                  Zoek publicaties
                </LinkTo>
              </div>
            {{/if}}
          </c.content>
        </AuCard>
      </li>
    </ul>
  </div>
</div>