<div class="info-tile {{unless uittreksel "u-background--gray-lightest"}}">
  <div class="grid">
    <div class="col--8-12">
      <div class="grid">
        <div class="col--1-12">
          {{#if index}}
            {{#ctx.get prop="vorigeAgendapunt" as |attrs|}}
              <p {{rdfa attrs}} class="h2 text-light sans-serif u-spacer--none">{{inc index}}</p>
            {{/ctx.get}}
          {{else}}
            <p class="h2 text-light sans-serif u-spacer--none">{{inc index}}</p>
          {{/if}}
        </div>
        <div class="col--11-12">
          {{#ctx.get prop="titel" as |attrs title|}}
            <h2 {{rdfa attrs}} class="list-content">{{clean-spaces title}}</h2>
          {{/ctx.get}}
          {{#ctx.get prop="geplandOpenbaar" as |attrs|}}
            <span {{rdfa attrs}} class="u-hidden"></span>
          {{/ctx.get}}
          {{#unless uittreksel.inhoud}}
            <p class="smallest text-fade uppercase u-spacer--top--tiny">Inhoud niet publiek</p>
          {{/unless}}
        </div>
      </div>
    </div>
    <div class="col--4-12 u-align-right">
      {{#if uittreksel.inhoud}}
        {{#link-to "bestuurseenheid.zitting.uittreksels.detail" uittreksel.id tagName="button" class="button button--alt button--alt--blue button--narrow button--small"}}
          Bekijk volledige inhoud <i class="vi vi-arrow vi-u-s button__icon"></i>
        {{/link-to}}
      {{/if}}
    </div>
  </div>
</div>

{{yield}}
