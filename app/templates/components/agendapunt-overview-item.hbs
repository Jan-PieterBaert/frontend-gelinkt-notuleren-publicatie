<div class="info-tile {{unless uittreksel "u-background--gray-lightest"}}">
  <div class="grid">
    <div class="col--8-12">
      <h2 property="dct:title" class="list-content">{{clean-spaces this.agendapunt.titel}}</h2>
      <span property="besluit:geplandOpenbaar" content={{this.agendapunt.geplandOpenbaar}} class="u-hidden"></span>
      {{#unless uittreksel.inhoud}}
        <p class="smallest text-fade uppercase u-spacer--top--tiny">Inhoud niet publiek</p>
      {{/unless}}
    </div>
    <div class="col--4-12 u-align-right">
      {{#if uittreksel.inhoud}}
        <LinkTo @route="bestuurseenheid.zitting.uittreksels.detail" @model={{uittreksel.id}} @tagName="button" class="button button--alt button--alt--blue button--narrow button--small">
          Bekijk volledige inhoud <i class="vi vi-arrow vi-u-s button__icon"></i>
        </LinkTo>
      {{/if}}
    </div>
  </div>
</div>

{{yield}}
